@model ArchitectDevicesCR.Models.Catalog.DeviceIndexModel

<div id="devices">
    <h3>Devices Catalog</h3>
    <div id="devicesTable">
        <table class="table table-bordered" id="catalogIndexTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Picture</th>
                    <th>Description</th>
                    <th>OS</th>
                    <th>Site</th>
                    <th>Status</th>
                    <th>Checked Out To</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dev in @Model.Devices)
                {
                <tr class="deviceRow">
                    <td class="">@dev.Id</td>
                    <td class="">
                        <div>
                            <a asp-controller="Catalog" asp-action="Detail" asp-route-id="@dev.Id">
                                <img src="@dev.ImageUrl" class="imageCell" />
                            </a>
                        </div>
                    </td>
                    <td class="">@dev.Description</td>
                    <td class="">@dev.OS</td>
                    <td class="">@dev.Site</td>
                    <td class="">@dev.Status</td>
                    <td class="">@dev.CheckedOutTo</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Styles {
    <link href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="http://cdn.datatables.net/plug-ins/a5734b29083/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
}
@section Scripts {
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="http://cdn.datatables.net/plug-ins/a5734b29083/integration/bootstrap/3/dataTables.bootstrap.js"></script>

    <script>$(document).ready(function () {
            $('#catalogIndexTable').DataTable();
        });</script>
}