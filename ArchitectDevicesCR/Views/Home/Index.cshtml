@{
    ViewData["Title"] = "Architect Devices Management System";
}
<h3>@ViewData["Title"]</h3>

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--r-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="catalog">
                <h2 class="mdl-card__title-text homeLabel"> Devices Catalog</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage team devices.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Catalog" asp-action="Index">
                    View Catalog
                </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--r-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="patrons">
                <h2 class="mdl-card__title-text homeLabel"> Users</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage team users data.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="User" asp-action="Index">
                    View User Index
                </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--r-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="branches">
                <h2 class="mdl-card__title-text homeLabel"> Sites</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage sites data.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Site" asp-action="Index">
                    View Site Index
                </a>
            </div>
        </div>
    </div>
</div>